	<SplitView x:Name="MySplitView" DisplayMode="CompactOverlay"  IsPaneOpen="False" 
               CompactPaneLength="50" OpenPaneLength="150">

		<SplitView.Pane>
			<StackPanel BorderBrush="LightGray" BorderThickness="1, 0">
				<Button x:Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;" Foreground="{ThemeResource SystemAccentColor}"
                     Width="50" Height="50" Background="Transparent" Click="HamburgerButton_Click"/>

				<StackPanel Orientation="Horizontal" Tapped="planningsMenu_Tapped">
					<Button x:Name="MenuButton1" FontFamily="Segoe MDL2 Assets" Content="&#xE825;"
                    Width="50" Height="50" Background="Transparent" Foreground="{ThemeResource SystemAccentColor}"/>
					<TextBlock Text="Plannings" FontSize="18" VerticalAlignment="Center" 
                               Foreground="{ThemeResource SystemAccentColor}" />
				</StackPanel>
				<StackPanel Orientation="Horizontal" Tapped="purchasesMenu_Tapped">
					<Button x:Name="MenuButton2" FontFamily="Segoe MDL2 Assets" Content="&#xE10F;"
                        Width="50" Height="50" Background="Transparent" Foreground="{ThemeResource SystemAccentColor}"/>
					<TextBlock Text="Purchases" FontSize="18" VerticalAlignment="Center" 
                               Foreground="{ThemeResource SystemAccentColor}" />
				</StackPanel>
				<StackPanel Orientation="Horizontal" Tapped="bookingsMenu_Tapped">
					<Button x:Name="MenuButton3" FontFamily="Segoe MDL2 Assets" Content="&#xE1D6;"
                        Width="50" Height="50" Background="Transparent" Foreground="{ThemeResource SystemAccentColor}"/>
					<TextBlock Text="Bookings" FontSize="18" VerticalAlignment="Center" 
                               Foreground="{ThemeResource SystemAccentColor}" />
				</StackPanel>
			</StackPanel>
		</SplitView.Pane>

		<SplitView.Content>
			<StackPanel Name="LayoutRoot" Height="Auto" Background="White" BorderBrush="LightGray" BorderThickness="1, 0">
				<StackPanel.ChildrenTransitions>
					<TransitionCollection>
						<ReorderThemeTransition/>
					</TransitionCollection>
				</StackPanel.ChildrenTransitions>

				<!--<Pivot x:Name="mainPivot" Title="WEDCHECKER">
                    <Pivot.TitleTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Stretch" Height="30">
                                <TextBlock Text="{Binding}" FontFamily="Segoe UI Light" FontWeight="Light" TextLineBounds="Tight" FontSize="40" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </DataTemplate>
                    </Pivot.TitleTemplate>
                    <Pivot.HeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock Text="{Binding}" FontFamily="Segoe UI" FontWeight="Bold" FontSize="25"/>

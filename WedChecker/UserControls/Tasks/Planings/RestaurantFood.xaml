<we:BaseTaskControl
    x:Class="WedChecker.UserControls.Tasks.Plannings.RestaurantFood"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WedChecker.UserControls.Tasks.Plannings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:we="using:WedChecker.UserControls.Tasks">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel Name="spDishes" Grid.Row="0" Orientation="Vertical" Margin="15, 0">
        </StackPanel>
		<Button Name="addDishButton" Click="addDishButton_Click" Grid.Row="1" 
				Style="{ThemeResource WedCheckerTransparentButton}">
			<StackPanel Orientation="Horizontal">
				<TextBlock Style="{ThemeResource WedCheckerTransparentButtonSymbol}">&#xE109;</TextBlock>
				<TextBlock Style="{ThemeResource WedCheckerTransparentButtonText}">New food</TextBlock>
			</StackPanel>
		</Button>
	</Grid>
</we:BaseTaskControl>

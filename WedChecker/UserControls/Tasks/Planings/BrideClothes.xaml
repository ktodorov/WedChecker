<we:BaseTaskControl
    x:Class="WedChecker.UserControls.Tasks.Planings.BrideClothes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WedChecker.UserControls.Tasks.Planings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:we="using:WedChecker.UserControls.Tasks"
    mc:Ignorable="d"
    Height="Auto"
    Width="Auto">

    <StackPanel Orientation="Vertical">
        <StackPanel Name="spBrideClothes" Orientation="Vertical" Margin="15, 0">
        </StackPanel>
        <Button Name="addClothingButton" BorderThickness="0" Content="&#xE109; New clothing" 
                VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="Segoe UI Symbol" 
                FontWeight="Light" FontSize="20" Foreground="{ThemeResource SystemAccentColor}"
                Click="addClothingButton_Click"/>
        <TextBlock Name="tbErrorMessage" TextAlignment="Center" Foreground="Red"
                   Style="{StaticResource ControlHeaderTextBlockStyle}" Margin="0, 10, 0, 0"/>
    </StackPanel>
</we:BaseTaskControl>

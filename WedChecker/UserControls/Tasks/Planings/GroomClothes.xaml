<we:BaseTaskControl
    x:Class="WedChecker.UserControls.Tasks.Planings.GroomClothes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WedChecker.UserControls.Tasks.Planings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:we="using:WedChecker.UserControls.Tasks"
    mc:Ignorable="d"
    Height="Auto"
    Width="Auto">

	<StackPanel Orientation="Vertical">
		<StackPanel Name="spGroomClothes" Orientation="Vertical" Margin="15, 0">
		</StackPanel>
		<Button Name="addClothingButton" Style="{ThemeResource WedCheckerTransparentButton}" Click="addClothingButton_Click">
			<StackPanel Orientation="Horizontal">
				<TextBlock Style="{ThemeResource WedCheckerTransparentButtonSymbol}">&#xE109;</TextBlock>
				<TextBlock Style="{ThemeResource WedCheckerTransparentButtonText}">New clothing</TextBlock>
			</StackPanel>
		</Button>
	</StackPanel>
</we:BaseTaskControl>

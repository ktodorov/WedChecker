<we:BaseTaskControl
    x:Class="WedChecker.UserControls.Tasks.Planings.ReligiousPlace"
    xmlns:local="using:WedChecker.UserControls.Tasks"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:we="using:WedChecker.UserControls.Tasks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:UserControls="using:WedChecker.UserControls"
    Height="Auto"
    Width="Auto">

    <StackPanel>
        <TextBox Name="tbReligiousNotes" Margin="20,0" TextChanged="tbReligiousNotes_TextChanged"
                 Style="{StaticResource WedCheckerFormTextBoxMultiLinesStyle}"/>

        <TextBlock Name="tbReligiousNotesDisplay" Style="{StaticResource WedCheckerDisplayTextBlockStyle}"
                   Visibility="Collapsed"/>

        <UserControls:WedCheckerMapControl x:Name="religiousPlaceMap" PinName="Religious place" />
    </StackPanel>
</we:BaseTaskControl>

<we:BaseTaskControl
    x:Class="WedChecker.UserControls.Tasks.Planings.BestManMaidOfHonorAccessories"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WedChecker.UserControls.Tasks.Planings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:we="using:WedChecker.UserControls.Tasks"
    mc:Ignorable="d"
    Height="Auto"
    Width="Auto">

    <StackPanel Orientation="Vertical">

        <StackPanel Name="spBestMan" Margin="0, 0, 0, 10">
            <TextBlock Text="Best man" Style="{StaticResource WedCheckerFormTextBlockStyle}"/>
            <StackPanel Name="spBestManAccessories" Orientation="Vertical" Margin="15, 0">
            </StackPanel>
            <Button Name="addBestManAccessoryButton" Click="addBestManAccessoryButton_Click"
					Style="{ThemeResource WedCheckerTransparentButton}">
				<StackPanel Orientation="Horizontal">
					<TextBlock Style="{ThemeResource WedCheckerTransparentButtonSymbol}">&#xE109;</TextBlock>
					<TextBlock Style="{ThemeResource WedCheckerTransparentButtonText}">New accessory for the best man</TextBlock>
				</StackPanel>
			</Button>
        </StackPanel>

        <StackPanel Name="spMaidOfHonor">
            <TextBlock Text="Maid of honor" Style="{StaticResource WedCheckerFormTextBlockStyle}"/>
            <StackPanel Name="spMaidOfHonorAccessories" Orientation="Vertical" Margin="15, 0">
            </StackPanel>
            <Button Name="addMaidOfHonorAccessoryButton" Click="addMaidOfHonorAccessoryButton_Click"
					Style="{ThemeResource WedCheckerTransparentButton}">
				<StackPanel Orientation="Horizontal">
					<TextBlock Style="{ThemeResource WedCheckerTransparentButtonSymbol}">&#xE109;</TextBlock>
					<TextBlock Style="{ThemeResource WedCheckerTransparentButtonText}">New accessory for the maid of honor</TextBlock>
				</StackPanel>
			</Button>
        </StackPanel>
    </StackPanel>
</we:BaseTaskControl>

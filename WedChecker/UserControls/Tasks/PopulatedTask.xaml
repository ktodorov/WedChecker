<UserControl
    x:Class="WedChecker.UserControls.Tasks.PopulatedTask"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WedChecker.UserControls.Tasks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch">

    <StackPanel Name="mainPanel" Height="Auto" Background="WhiteSmoke"
                    Orientation="Vertical"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <StackPanel.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition />
            </TransitionCollection>
        </StackPanel.ChildrenTransitions>

        <TextBlock Name="buttonTaskName" HorizontalAlignment="Center" TextAlignment="Center" Text="Task name" FontSize="25"
                           Style="{StaticResource WedCheckerDisplayTextBlockStyle}" >
        </TextBlock>

        <TextBlock Name="tbTaskHeader" Style="{StaticResource DisplayTextBlockStyle}"
                    Margin="0" VerticalAlignment="Stretch" Padding="10"
                    TextAlignment="Center" TextWrapping="WrapWholeWords"
                    Foreground="Gray"/>
    </StackPanel>
</UserControl>

<UserControl
    x:Class="WedChecker.UserControls.CountdownTimer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WedChecker.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" TextWrapping="Wrap" Text="There are exactly"
                   VerticalAlignment="Center" Style="{StaticResource TitleTextBlockStyle}" FontSize="20"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="tbTimeLeft" Text="TIME LEFT" TextAlignment="Center" Style="{StaticResource CountdownTimerStyle}"
                       Loaded="tbTimeLeft_Loaded"/>
        </StackPanel>
        <TextBlock Grid.Row="2" HorizontalAlignment="Center" TextWrapping="Wrap" Text="left to the wedding"
                   VerticalAlignment="Center" Style="{StaticResource TitleTextBlockStyle}" FontSize="20"/>

    </Grid>
</UserControl>

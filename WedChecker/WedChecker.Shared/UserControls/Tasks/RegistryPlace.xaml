<we:BaseTaskControl
    x:Class="WedChecker.UserControls.Tasks.RegistryPlace"
    xmlns:local="using:WedChecker.UserControls.Tasks"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:we="using:WedChecker.UserControls.Tasks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:UserControls="using:WedChecker.UserControls"
    Height="Auto"
    Width="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="{StaticResource PhoneAccentBrush}" BorderThickness="1" Margin="9, 1"/>
        <UserControls:MapView x:Name="locationMap" Zoom="10" ShowTraffic="True" Height="300"
                              MapServiceToken="tPlo53-BRbJuec2d8hOzgw" Margin="10, 2"/>
        <Button Name="pinAdressButton" Content="Pin address" Click="pinAdressButton_Click" Style="{StaticResource ButtonClearStyle}"
                Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" />
    </Grid>
</we:BaseTaskControl>

<we:BaseTaskControl
    x:Class="WedChecker.UserControls.Tasks.Planings.GuestsList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WedChecker.UserControls.Tasks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:we="using:WedChecker.UserControls.Tasks"
    mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Name="selectContacts" Content="Select" Style="{StaticResource ButtonClearStyle}"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Click="selectContacts_Click" Grid.Row="0"/>

        <TextBlock Name="tbGuestsAdded" Grid.Row="1" TextAlignment="Center" Margin="0, 0, 0, 10"
                   Style="{StaticResource ControlHeaderTextBlockStyle}"/>
        
        <StackPanel Name="spContacts" Visibility="Collapsed" Margin="15, 0, 0, 0" Grid.RowSpan="2">
        </StackPanel>
    </Grid>
</we:BaseTaskControl>

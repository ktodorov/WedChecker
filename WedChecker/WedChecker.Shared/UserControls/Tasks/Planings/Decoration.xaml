<we:BaseTaskControl
    x:Class="WedChecker.UserControls.Tasks.Planings.Decoration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WedChecker.UserControls.Tasks.Planings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:we="using:WedChecker.UserControls.Tasks">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Name="tbHeader" Text="Here you can save the decoration, planned for the wedding" TextAlignment="Center"
                   Style="{StaticResource DisplayTextBlockStyle}" Margin="0, 0, 0, 10"/>
        <TextBox Name="tbDecoration" TextChanged="tbDecoration_TextChanged" Style="{StaticResource WedCheckerFormTextBoxMultiLinesStyle}"/>
        <StackPanel Name="displayPanel" Visibility="Collapsed">
            <TextBlock Name="tbDecorationDisplay" Style="{StaticResource WedCheckerDisplayTextBlockStyle}" TextAlignment="Center"/>
        </StackPanel>
        <TextBlock Name="tbErrorMessage" TextAlignment="Center" Foreground="Red"
                   Style="{StaticResource ControlHeaderTextBlockStyle}" Margin="0, 10, 0, 0"/>
    </StackPanel>
</we:BaseTaskControl>

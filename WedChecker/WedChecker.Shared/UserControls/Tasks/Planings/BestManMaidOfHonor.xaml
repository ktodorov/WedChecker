<we:BaseTaskControl
    x:Class="WedChecker.UserControls.Tasks.Planings.BestManMaidOfHonor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WedChecker.UserControls.Tasks.Planings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:we="using:WedChecker.UserControls.Tasks">
    <StackPanel Orientation="Vertical">
        <StackPanel Name="spBestMan">
            <Button Name="selectBestMan" Content="Select best man" Style="{StaticResource ButtonClearStyle}"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Click="selectBestMan_Click" Width="200"/>
        </StackPanel>

        <Border Style="{StaticResource WedCheckerBorderSplitter}" Margin="15, 0"/>

        <StackPanel Name="spMaidOfHonor">
            <Button Name="selectMaidOfHonor" Content="Select maid of honor" Style="{StaticResource ButtonClearStyle}"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Click="selectMaidOfHonor_Click" Width="200"/>
        </StackPanel>
    </StackPanel>
</we:BaseTaskControl>

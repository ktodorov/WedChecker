<we:BaseTaskControl
    x:Class="WedChecker.UserControls.Tasks.WeddingStyle"
    xmlns:local="using:WedChecker.UserControls.Tasks"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:we="using:WedChecker.UserControls.Tasks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Name="tbHeader" Text="Here you can save the style,&#x0a;planned for the wedding." TextAlignment="Center"
                   Style="{StaticResource ControlHeaderTextBlockStyle}" Margin="0, 0, 0, 10"/>
        <TextBox Name="tbStyle" Height="200" Margin="20,0" TextChanged="tbStyle_TextChanged" TextWrapping="Wrap"/>
        <StackPanel Name="displayPanel" Visibility="Collapsed">
            <TextBlock Name="tbStyleDisplay" Style="{StaticResource DisplayTextBlockStyle}"/>
        </StackPanel>
        <Button Name="stylePickerButton" Content="Submit" HorizontalAlignment="Center" Style="{StaticResource ButtonClearStyle}" 
                Click="stylePickerButton_Click"/>
        <TextBlock Name="tbErrorMessage" TextAlignment="Center" Foreground="Red"
                   Style="{StaticResource ControlHeaderTextBlockStyle}" Margin="0, 10, 0, 0"/>
    </StackPanel>
</we:BaseTaskControl>

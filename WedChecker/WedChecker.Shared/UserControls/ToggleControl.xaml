<UserControl
    x:Class="WedChecker.UserControls.ToggleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WedChecker.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Name="tbTitle" Grid.Column="0" Style="{StaticResource WedCheckerFormTextBlockStyle}" 
                   FontSize="20"/>
        
        <ToggleSwitch Name="toggleSwitch" Grid.Column="1"/>
    </Grid>
</UserControl>

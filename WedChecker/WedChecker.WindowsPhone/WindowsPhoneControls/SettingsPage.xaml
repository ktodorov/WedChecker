<Page
    x:Class="WedChecker.WindowsPhoneControls.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WedChecker.WindowsPhoneControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Background="White">
        <TextBlock Style="{StaticResource WedCheckerGridViewHeaderItemStyle}"
                   FontSize="30" TextAlignment="Left" Margin="10, 0, 10, 40">
            SETTINGS
        </TextBlock>
        
        <TextBlock Style="{StaticResource WedCheckerFormTextBlockStyle}"
                   TextAlignment="Left" FontSize="20">
            Sync only on Wi-Fi
        </TextBlock>
        <ToggleSwitch Name="wiFiOnlyToggle" Toggled="wiFiOnlyToggle_Toggled"
                      Margin="15, 0"/>
    </StackPanel>
</Page>
